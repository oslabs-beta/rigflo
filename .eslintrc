{
  "root": true,
  "extends": ["problems", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-undef": "error",
    "no-use-before-define": "warn"
  },
  "ignorePatterns": ["web-test-runner.config.js"]
}
