{
  "root": true,
  "extends": [
    "plugin:react-hooks/recommended",
    "plugin:react/recommended",
    "problems",
    "prettier"
  ],
  "plugins": ["react", "react-hooks"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/prop-types": "off",
    "no-console": "off",
    "no-undef": "error",
    "no-use-before-define": "warn"
  },
  "ignorePatterns": ["web-test-runner.config.js"]
}
