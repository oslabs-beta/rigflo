{
  "editor.tabSize": 2,
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,

  // ESLint
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // Prettier
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
